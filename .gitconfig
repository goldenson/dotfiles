[user]
	name = Maxime Orefice
	email = morefice@gitlab.com
	signingkey = A7CF9143EB9D9FD8
[color]
	ui = true
[core]
	autocrlf = input
[push]
	default = current
[diff]
	noprefix = true
[alias]
	uncommit = reset --soft HEAD^
	unstage = reset
	cleanup = "!f() { git branch --merged | grep -v "master" | xargs -n 1 git branch -d }; f"
	untrack = clean -fd
[branch]
	sort = -committerdate
[pull]
	ff = only
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[commit]
	gpgsign = true
[gpg]
	program = gpg
