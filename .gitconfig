[user]
	name = Maxime Orefice
	email = contact@maximeorefice.com
	signingkey = /Users/goldenson/.ssh/id_ed25519.pub
[color]
	ui = true
[core]
	autocrlf = input
[fetch]
	prune = true
	pruneTags = true
	all = true
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[push]
	default = current
[diff]
	noprefix = true
[alias]
	uncommit = reset --soft HEAD^
	unstage = reset
	cleanup = "!f() { git branch --merged | grep -vE '^([+*]|\\s*(master|main)$)' | xargs -r git branch -d; }; f"
	untrack = clean -fd
[branch]
	sort = -committerdate
[tag]
	sort = version:refname
[pull]
	ff = only
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[gpg]
	format = ssh
[commit]
	gpgsign = true
